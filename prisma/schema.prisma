generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // user, admin
  position  String
  avatar    String?
  loggedIn  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Areas     Areas?   @relation(fields: [areasId], references: [id])
  areasId   String?
}

model Areas {
  id          String      @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  icone       String?
  User        User[]
  Indicators  Indicator[]
}

model Indicator {
  id            String   @id @default(cuid())
  name          String
  description   String?
  responsibles  String   @default("")
  metaReference String
  metaFormula   String
  value         Float
  level         String // estratégico, tático, operacional
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Areas         Areas?   @relation(fields: [areasId], references: [id])
  areasId       String?
}

model IndicatorHistory {
  id        String   @id @default(cuid())
  area      String   @default("")
  year      Int
  month     String
  values    Json
  createdAt DateTime @default(now())
}
